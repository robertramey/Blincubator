window 
{
	margin: 2em;
	
}
body
{
	font-family: Georgia, "Times New Roman" , Times, serif;
	background-color: white;
	margin:0em;
	padding:0em;
}
h1, h2, h3
{
	font-family: Helvetica, Geneva, Arial, SunSans-Regular, sans-serif;
}
h3 
{
	/*font-size: 80%;*/
	font-weight:lighter;
}
dt
{
	font-family: Helvetica, Geneva, Arial, SunSans-Regular, sans-serif;
	font-size:larger;
}	
dd
{
	font-family: Helvetica, Geneva, Arial, SunSans-Regular, sans-serif;
	font-size:larger;
}	
a:link
{
	color: blue;
}
a:visited
{
	color: purple;
}

/* layout */
p.logo
{
	height: 7em;
	/*left:auto;*/
}
td.logo
{
	font-family: Helvetica, Geneva, Arial, SunSans-Regular, sans-serif;
	font-size: large;
	background-color: white;
	margin:0em;
	padding:0em;
}

/* navbar style */
dt.navbar
{
	font-family: Helvetica, Geneva, Arial, SunSans-Regular, sans-serif;
	font-size:small;
	background: white;
	padding:0em;
	height: 17px;
}
dl.navbar
{
	font-size: small;
	margin:0em;
	padding:0em;
}
td.navbar
{
	border-style:solid ;
	background: white;
	width: 169px;
    height: 100%;
}
td.divider
{
	background: blue;
	width: .5em;
	padding:0em;
    height: 100%;
}
td.detail
{
	border-style:solid ;
	background-color: #ddd;
	width: auto;
    height: 100%;
    margin: 0em;
}
iframe.navbar{
    width: 100%;
    height: 100%;
    border: 0;
}
iframe.detail{
    width: 100%;
    height: 100%;
    border: 0;
}

img.float
{
	float: right;
}

div.leftfloat {
    color: #006;
    float: left;
    width: 50%;
}
div.latestnews 
{
	color: #006;
	background: #fff;
    float: right;
    border-width: 3px 3px 3px 3px;
    border-style: solid;
    border-color: #f00;
    padding: 10px 10px 10px 10px;
}
