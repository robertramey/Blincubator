body
{
	font-family: Georgia, "Times New Roman" , Times, serif;
	margin:0em;
	padding:0em;
	background-color: #ddd;
}
textarea, input
{
	font-family: Helvetica, Geneva, Arial, sans-serif;
	font-size:.9em;
}

h1, h2, h3, h4, h5, h6
{
	font-family: Helvetica, Geneva, Arial, SunSans-Regular, sans-serif;
}
h2 {
	font-size: 2em;
}
h3 {
	font-size: 1.5em;
}
h4 {
	font-size: 1.17em;
}
h5 {
	font-size: 1.12em;
}
h6 {
	font-size: .83em;
}
h7 {
	font-size: .75em;
}
h5, h6 
{
	font-weight: normal;
}
em
{
	color: Red;
}
a:link
{
	color: blue;
}
a:visited
{
	color: purple;
}
col:left_column
{
	min-width:30%;
	align:"left";
}
col:right_column
{
	align:"left";
}
